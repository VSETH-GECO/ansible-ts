[Unit]
Description=Teamspeak 3 Server

[Service]
User={{ansible_ssh_user}}
Group={{ansible_ssh_user}}
ExecStart=/bin/bash /home/{{ansible_ssh_user}}/ts/ts3server_startscript.sh start
ExecStop=/bin/bash /home/{{ansible_ssh_user}}/ts/ts3server_startscript.sh stop
PIDFile=/home/{{ansible_ssh_user}}/ts/ts3server.pid
Type=forking
RestartSec=15
Restart=always

[Install]
WantedBy=multi-user.target